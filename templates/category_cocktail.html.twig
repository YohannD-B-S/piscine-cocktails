{% extends 'base.html.twig' %}

{% block metatitle %} 
    Catégories des cocktails
{% endblock metatitle %}

{% block main %}
<h2 class="main-title">Catégories des cocktails</h2>

<div class="categories-container">
    {% for categorie in categories %}
        <article class="cocktail category-card">
            <h3 class="category-title">{{ categorie.nom }}</h3>
            <p class="category-description">{{ categorie.description }}</p>
        </article>
    {% endfor %}
</div>
{% endblock main %}