{% extends 'base.html.twig'%}
{% block main %}
<!--on étend le fichier de base.html.twig afin d'y inclure ses parametres qui sont des elements communs a toute les pages-->
<!-- dans les parametres de la base, il y a le block. ici on y inclu le texte du main -->

<main class="main">
    <h1 class="main-title">Le meilleur cocktail !</h1>

    <div class="cocktail-list-container">
      
            <article class="cocktail">
                <h2>{{ bestCocktail.nom }}</h2>
                <img class="cocktail-image" src="{{ bestCocktail.image }}" alt="{{ bestCocktail.nom }}" />
                <p>{{ bestCocktail.description }}</p>
                <p>Ingrédients :</p>

                <ul>
                    {% for ingredient in bestCocktail.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
                <p>Publié le : {{ bestCocktail.date_creation }}</p>
            </article>
    </div>
</main>

{% endblock main %}