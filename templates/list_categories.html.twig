{% extends 'base.html.twig' %}

{% block metatitle %} 
    Catégorie des cocktails
{% endblock metatitle %}

{% block main %}


<h2 class="main-title">Catégories des cocktails</h2>


    <div class="cocktail-list-container">


        {% for categorie in categories %}

        <a href= "{{ path('category-details', {'id':categorie.id}) }}"><article class="cocktail category-card">
                <h3 class="category-title">{{ categorie.nom }}</h3>
                
                
            </article></a>

        {% endfor %}

    </div>
    
{% endblock main %}






